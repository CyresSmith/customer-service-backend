    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "yarn install -f && yarn migrate:dev && cross-env NODE_ENV=development nest start --watch",
        "start:dev": "cross-env NODE_ENV=development nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "yarn install env-cmd --force && cross-env NODE_ENV=development env-cmd -f .development.env node --max-old-space-size=7168 dist/src/main",
        "migration:generate:dev": "ts-node ./node_modules/typeorm/cli migration:generate -d ./db/dataSource.ts",
        "migrate:dev": "ts-node ./node_modules/typeorm/cli migration:run -d db/dataSource.ts",
        "migrate:undo:dev": "ts-node ./node_modules/typeorm/cli migration:revert -d db/dataSource.ts",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "dependencies": {
